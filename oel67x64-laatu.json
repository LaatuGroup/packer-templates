{
  "variables": {
    "iso_url": "isos\\",
    "kickstart": "laatu-oel67x64-ks.cfg",
    "name": "oel67x64-laatu",
    "ssh_name": "root",
    "ssh_pass": "oel67x64"
  },

  "builders": [{
    "boot_command": [
      "<esc><wait>",
      "vmlinuz initrd=initrd.img ",
      "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart`}}",
      "<enter>"
    ],
    "boot_wait": "10s",

    "disk_size": 12288,
    "format": "ovf",
    "guest_additions_mode": "upload",
    "guest_os_type": "Oracle_64",
    "headless": false,

    "iso_url": "{{user `iso_url`}}V77197-01.iso",
    "iso_checksum": "8558e21ea5b4f94c257f2888531a3b8a",
    "iso_checksum_type": "md5",

    "http_directory": "public",
    "http_port_min": 9980,
    "http_port_max": 9980,

    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_pty": true,
    "ssh_wait_timeout": "25m",

    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",

    "type": "virtualbox-iso",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--vram", "32"]
    ],

    "vm_name": "{{user `name`}}"
  }],

  "post-processors": [{
    "keep_input_artifact": true,
    "output": "build/vagrant-{{user `name`}}.box",
    "type": "vagrant"
  }],

  "provisioners": [{
    "type": "shell",
    "scripts": [
      "configuration/rhel-vagrant.sh",
      "configuration/oelx64-vbox-additions.sh"
    ]
  }]
}
